                  <Button id="laskutus" mnemonicParsing="false" prefHeight="30.0" prefWidth="120.0" text="Laskutus" />
               </children>
            </HBox>
         </top>
         <bottom>
            <Button mnemonicParsing="false" prefHeight="30.0" prefWidth="80.0" text="OK" BorderPane.alignment="CENTER_RIGHT">
               <BorderPane.margin>
                  <Insets bottom="10.0" right="10.0" />
