<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.harjoitustyooti.Varausohjelma">
   <children>
      <BorderPane layoutY="-3.0" prefHeight="400.0" prefWidth="600.0">
